import random

random_number = random.randint(1, 20)
chances = 3

while (chances != 0):
       guess = int(input('Enter your guess '))
       if (guess == random_number):
              print('Right answer!')
              break;
       else:
              print('Try again!')
       
       chances = chances - 1

if (chances == 0):
       print("Looks like you've ran out chances! The correct guess was: " + str(random_number));
